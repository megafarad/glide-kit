{
  "name": "glide-kit",
  "version": "0.1.0",
  "description": "A simple library of abstractions for Valkey Glide - batteries included.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest run"
  },
  "author": "Chris Carrington <chris@megafarad.com> (https://megafarad.com)",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.7.2",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@valkey/valkey-glide": "^2.1.1",
    "dotenv": "^17.2.3"
  }
}
